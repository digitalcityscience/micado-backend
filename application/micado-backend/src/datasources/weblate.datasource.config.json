{
  "name": "weblate",
  "connector": "rest",
  "baseURL": "https://translate.micadoproject.eu",
  "debug": true,
  "options": {
    "headers": {
      "accept": "*/*",
      "content-type": "application/json",
      "Authorization": "Basic YWRtaW46bWljYWRvYWRtMjAyMA=="
    },
    "strictSSL": false
  },
  "crud": false,
  "operations": [
    {
      "template": {
        "method": "GET",
        "url": "https://translate.micadoproject.eu/api/translations",
        "query": {
          "limit": 10,
          "offset": 0
        },
        "options": {
          "strictSSL": false,
          "useQuerystring": true
        }
      },
      "functions": {
        "translations": []
      }
    },
    {
      "template": {
        "method": "GET",
        "url": "/api/projects/{project}/components",
        "query": {
        },
        "options": {
          "strictSSL": false,
          "useQuerystring": true
        }
      },
      "functions": {
        "components": ["project"]
      }
    },
    {
      "template": {
        "method": "POST",
        "url": "/api/components/{project}/{component}/lock/",
        "query": {
        },
        "body": {
          "lock": "{lock}"
        },
        "options": {
          "strictSSL": false,
          "useQuerystring": true
        }
      },
      "functions": {
        "lock": ["project", "component", "lock"]
      }
    },
    {
      "template": {
        "method": "POST",
        "url": "/api/projects/{project}/repository/",
        "query": {
        },
        "body": {
          "operation": "{operation}"
        },
        "options": {
          "strictSSL": false,
          "useQuerystring": true
        }
      },
      "functions": {
        "git": ["project", "operation"]
      }
    }
  ]
}